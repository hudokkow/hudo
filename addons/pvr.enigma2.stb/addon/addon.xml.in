<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="pvr.enigma2.stb"
  version="0.0.1"
  name="Enigma2 STB Client"
  provider-name="Cristiano A. Silva">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="xbmc.pvr" version="1.9.3"/>
  </requires>
  <extension
    point="xbmc.pvrclient"
    library_linux="Kodi_Enigma2_STB.pvr"
    library_osx="Kodi_Enigma2_STB.pvr"
    library_freebsd="Kodi_Enigma2_STB.pvr"
    library_wingl="Kodi_Enigma2_STB_win32.dll"
    library_windx="Kodi_Enigma2_STB_win32.dll"
    library_android="libKodi_Enigma2_STB.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Enigma2 STBs client</summary>
    <description lang="en">Enigma2 STBs client with TV streaming support, EPG, recordings and timers.</description>
    <disclaimer lang="en">This is unstable software! The authors are in no way responsible for failed recordings, incorrect timers, wasted hours, or any other undesirable effects!</disclaimer>
    <platform>@OS@</platform>
  </extension>
</addon>
